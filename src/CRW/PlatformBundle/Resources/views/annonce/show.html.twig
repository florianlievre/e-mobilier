                    <!-- Title -->
                    <h2 class="post-title">{{ annonce.titre }}</h2>


                    <div class="blog-post-content">
                        <br>
                        <!-- List -->

                        <br>
                        <p>
                            {{ annonce.description }}
                        </p>
                    </div>

                </div><!-- / .blog-post-single -->


